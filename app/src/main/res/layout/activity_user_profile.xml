<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Profile Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profilepic"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background" />

        <!-- Profile Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 followers Â· 20 following"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Share Button -->
        <Button
            android:id="@+id/shareProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Playlists Section -->
    <TextView
        android:id="@+id/playlistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlists"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/playlistImage1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/blackpink"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/playlist1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Playlist 1"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Artists Section -->
    <TextView
        android:id="@+id/artistsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artists"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/artistImage1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jayz" />

        <TextView
            android:id="@+id/artistName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jay Z"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:padding="18dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/navLibrary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Library"
            android:src="@drawable/baseline_library_books_24" />

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:src="@drawable/baseline_home_24" />

        <ImageView
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Settings"
            android:src="@drawable/baseline_settings_24" />
    </LinearLayout>
</LinearLayout>
