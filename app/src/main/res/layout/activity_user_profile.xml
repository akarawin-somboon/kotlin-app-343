<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    tools:context=".UserProfileActivity">

    <!-- Profile Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/dark_transparent"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profilepic"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"/>

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/profileStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52 followers Â· 20 following"
                android:textColor="@color/light_gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/white"
                app:strokeColor="@color/white"
                app:cornerRadius="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Share Profile Button -->
            <Button
                android:id="@+id/shareProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Profile"
                android:layout_marginTop="8dp"
                android:background="@color/dark_transparent"
                android:textColor="@color/white"
                app:cornerRadius="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Playlist Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/playlistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlists"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Artists Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/playlistTitle"
        android:layout_marginTop="24dp">

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:padding="18dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/navLibrary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_library_books_24"/>

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_home_24"/>

        <ImageView
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_settings_24"/>
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:src="@drawable/jayz"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="488dp" />

    <TextView
        android:id="@+id/artistsTitle"
        android:layout_width="71dp"
        android:layout_height="25dp"
        android:text="Artists"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="426dp" />

    <ImageView
        android:layout_width="62dp"
        android:layout_height="36dp"
        android:src="@drawable/blackpink"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="357dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
